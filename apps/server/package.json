{
  "name": "@lovico/server",
  "module": "./src/server.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/server.ts --outfile server",
    "dev": "bun run --hot src/server.ts",
    "start": "bun run dist/server.js",
    "lint": "bun run lint"
  },
  "devDependencies": {
    "@lovico/typescript-config": "*",
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "tsdown": "^0.15.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@lovico/backend-common": "*",
    "@lovico/common": "*",
    "@lovico/auth": "*",
    "@lovico/store": "*",
    "@lovico/trpc": "*",
    "cors": "^2.8.5",
    "express": "^5.1.0"
  }
}
