{
  "extends": "@lovico/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@lovico/ui": ["../../packages/ui/src/*"],
      "@lovico/store/*": ["../../packages/store/src/*"],
      "@lovico/auth/*": ["../../packages/auth/src/*"],
      "@lovico/trpc/*": ["../../packages/trpc/src/*"],
      "@lovico/common/*": ["../../packages/common/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
